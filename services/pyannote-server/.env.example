# Pyannote Server Configuration

# Server settings
PYANNOTE_HOST=0.0.0.0
PYANNOTE_PORT=8000
PYANNOTE_DEBUG=false

# HuggingFace token (required)
# Get your token from https://huggingface.co/settings/tokens
# You need to accept the model license at https://huggingface.co/pyannote/speaker-diarization-3.1
PYANNOTE_HF_TOKEN=your_huggingface_token_here

# Model settings
PYANNOTE_DIARIZATION_MODEL=pyannote/speaker-diarization-3.1
PYANNOTE_MIN_SPEAKERS=2
PYANNOTE_MAX_SPEAKERS=2

# API key for authentication (optional)
PYANNOTE_API_KEY=

# Audio settings
PYANNOTE_SAMPLE_RATE=16000
PYANNOTE_TEMP_DIR=/tmp/pyannote

# Callback settings
PYANNOTE_CALLBACK_TIMEOUT=30
PYANNOTE_MAX_RETRIES=3
