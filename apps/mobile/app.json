{
  "expo": {
    "name": "SalonTalk AI",
    "slug": "salontalk-ai",
    "version": "0.1.0",
    "orientation": "landscape",
    "icon": "./assets/icon.png",
    "scheme": "salontalk",
    "userInterfaceStyle": "light",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "assetBundlePatterns": ["**/*"],
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.revol.salontalk",
      "infoPlist": {
        "NSMicrophoneUsageDescription": "施術中の会話を分析するためにマイクへのアクセスが必要です。",
        "NSSpeechRecognitionUsageDescription": "会話をテキストに変換するために音声認識が必要です。",
        "UIRequiresFullScreen": true,
        "UISupportedInterfaceOrientations~ipad": [
          "UIInterfaceOrientationLandscapeLeft",
          "UIInterfaceOrientationLandscapeRight"
        ]
      }
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "package": "com.revol.salontalk",
      "permissions": [
        "android.permission.RECORD_AUDIO"
      ]
    },
    "plugins": [
      "expo-router",
      [
        "expo-av",
        {
          "microphonePermission": "施術中の会話を分析するためにマイクへのアクセスが必要です。"
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    },
    "extra": {
      "router": {
        "origin": false
      },
      "eas": {
        "projectId": "your-project-id"
      }
    }
  }
}
